<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/news_image"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:src="@drawable/icon_youtube"
            android:layout_height="200dp"/>
        <TextView
            android:id="@+id/news_title"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:text="Title"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:paddingEnd="10dp"
            android:lineSpacingExtra="5dp"
            android:layout_below="@id/news_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingRight="10dp" />
        <TextView
            android:id="@+id/news_description"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:text="Descp"
            android:paddingLeft="10dp"

            android:textSize="16sp"

            android:paddingEnd="10dp"
            android:layout_below="@id/news_title"
            android:lineSpacingExtra="5dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:paddingRight="10dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/news_description"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"


            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/news_date"
                android:layout_width="wrap_content"

                android:text="Yesterday"
                android:layout_height="match_parent"
                android:paddingRight="5dp" />
            <TextView
                android:id="@+id/news_source"
                android:layout_width="wrap_content"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="BBC"
                android:layout_toEndOf="@id/news_date"
                android:layout_height="match_parent"
                android:paddingRight="5dp"
                android:layout_toRightOf="@id/news_date" />
            <TextView
                android:id="@+id/news_view"
                android:layout_width="wrap_content"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="50 Views"
                android:layout_toEndOf="@id/news_source"
                android:layout_height="match_parent"
                android:paddingRight="5dp"
                android:layout_toRightOf="@id/news_source" />
        </RelativeLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>